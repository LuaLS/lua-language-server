// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "测试",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${workspaceRoot}/server/test.lua",
			"arg": [
			],
			"consoleCoding": "utf8",
			"sourceCoding": "utf8",
			"luaRuntime": "5.4 64bit"
		},
		{
			"name": "附加",
			"type": "lua",
			"request": "attach",
			"stopOnEntry": true,
			"address": "127.0.0.1:11411",
		},
		{
			"name": "编译",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${workspaceRoot}/server/test/main.lua",
			"cwd": "${workspaceRoot}/server",
			"env": {
				"PATH": "${workspaceRoot}\\server\\bin\\"
			},
			"path": "${workspaceRoot}/server/bin/?.lua",
			"cpath": "${workspaceRoot}/server/bin/?.dll;",
			"arg": [
			],
			"consoleCoding": "utf8",
			"sourceCoding": "utf8",
			"preLaunchTask": "编译",
			"luaRuntime": "5.4 64bit"
		},
		{
			"name": "发布",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${workspaceRoot}/server/publish.lua",
			"arg": [
			],
			"consoleCoding": "utf8",
			"sourceCoding": "utf8",
			"luaRuntime": "5.4 64bit"
		},
		{
			"name": "测试-beta",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${workspaceRoot}/server-beta/test.lua",
			"arg": [
			],
			"consoleCoding": "utf8",
			"sourceCoding": "utf8",
			"luaRuntime": "5.4 64bit"
		},
	]
}
