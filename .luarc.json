{
    "diagnostics": {
        "disable": [
            "close-non-object",
            "missing-local-export-doc"
        ],
        "groupFileStatus": {
            "ambiguity": "Any",
            "await": "Any",
            "duplicate": "Any",
            "global": "Any",
            "luadoc": "Any",
            "redefined": "Any",
            "strict": "Any",
            "type-check": "Any",
            "unbalanced": "Any",
            "unused": "Any"
        },
        "ignoredFiles": "Opened",
        "libraryFiles": "Opened"
    },
    "runtime": {
        "version": "Lua 5.5",
        "path": [
            "script/?.lua",
            "script/?/init.lua",
            "?.lua",
            "?/init.lua"
        ],
        "pathStrict": true
    },
    "workspace": {
        "maxPreload": 1600,
        "preloadFileSize": 1000,
        "ignoreDir": [
            "/locale/",
            "/libs/",
            "/3rd",
            "/.vscode",
            "/meta"
        ],
        "checkThirdParty": false,
        "library": [
            "3rd/bee.lua/meta"
        ]
    },
    "typeFormat": {
        "config": {
            "format_line": "false"
        }
    },
    "hover": {
        "expandAlias": false
    },
    "type": {
        "castNumberToInteger": false,
        "weakUnionCheck": false
    },
    "doc": {
        "privateName": [
            "_*"
        ]
    },
    "diagnostics.globals": [
        "jit"
    ]
}
